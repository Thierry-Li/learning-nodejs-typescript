{
  "name": "nodejs-typescript",
  "version": "3.0.0",
  "main": "src/app.ts",
  "author": "Thierry Li",
  "description": "Learning repository of NodeJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thierry-Li/learning-nodejs-typescript"
  },
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "commit": "git-cz",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^19.2.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "@types/serve-favicon": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.48.0",
    "eslint-plugin-prettier": "^5.1.3",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "standard-version": "^9.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "yarn-deduplicate": "^6.0.2"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "serve-favicon": "^2.5.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{css,html,js,jsx,json,md}": "prettier --write",
    "yarn.lock": "yarn-deduplicate yarn.lock",
    "*.{js,jsx}": [
      "eslint --max-warnings=5 .",
      "eslint --fix",
      "eslint --cache ."
    ]
  },
  "eslintIgnore": [
    "_templates",
    "build",
    "storybook-static",
    "coverage",
    "/.storybook/main.js",
    "/.storybook/preview-head.html",
    "/.storybook/preview.js",
    "!.*/**",
    "dist",
    "node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn commit"
    }
  }
}
